@model TruckingVSM.Models.Location

@{
    Layout = null;
}

<!DOCTYPE html>

@using (Html.BeginForm("AddOrEdit", "Location", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        <label class="control-label">Địa điểm</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="form-group">
        <label class="control-label">Kinh độ</label>
        @Html.EditorFor(model => model.longitude, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Vĩ độ</label>
        @Html.EditorFor(model => model.latitude, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}