@model TruckingVSM.Models.VT_GetDetailById_Result

@{
    Layout = null;
}


@using (Html.BeginForm("AddOrEditDetail", "Transaction", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        <label class="control-label">Tên biểu cước</label>
        @Html.EditorFor(model => model.FeeName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Đơn giá</label>
        @Html.EditorFor(model => model.FeeAmount, new { htmlAttributes = new { @class = "form-control", @id = "FeeAmount" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số lượng</label>
        @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @id = "Quantity" } })
    </div>
    <div class="form-group">
        <label class="control-label">Đơn vị</label>
        @Html.EditorFor(model => model.CntrSize, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Tổng tiền</label>
        @Html.EditorFor(model => model.Total, new { htmlAttributes = new { @class = "form-control", @id = "Total" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}

<script>
    $("#FeeAmount").change(function () {
        var total = parseInt($("#FeeAmount").val()) * parseInt($("#Quantity").val());
        $("#Total").val(total);
    });
</script>