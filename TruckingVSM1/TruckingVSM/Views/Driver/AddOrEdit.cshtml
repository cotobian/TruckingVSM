@model TruckingVSM.Models.Driver

@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Driver", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        <label class="control-label">Tên tài xế</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="form-group">
        <label class="control-label">Ngày sinh</label>
        @Html.EditorFor(model => model.Birthday, new { htmlAttributes = new { @class = "form-control datepick" } })
    </div>
    <div class="form-group">
        <label class="control-label">Nơi thường trú</label>
        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số Giấy phép Lái xe</label>
        @Html.EditorFor(model => model.License, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Ngày cấp Giấy phép Lái xe</label>
        @Html.EditorFor(model => model.LicenseDate, new { htmlAttributes = new { @class = "form-control datepick" } })
    </div>
    <div class="form-group">
        <label class="control-label">Ngày hết hạn</label>
        @Html.EditorFor(model => model.LicenseExpire, new { htmlAttributes = new { @class = "form-control datepick" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số Chứng minh Nhân dân</label>
        @Html.EditorFor(model => model.CMND, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Số Điện thoại</label>
        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Zalo ID</label>
        @Html.EditorFor(model => model.ZaloId, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}

<script>
    $(".datepick").datepicker({ dateFormat: 'dd/mm/yy' });
</script>