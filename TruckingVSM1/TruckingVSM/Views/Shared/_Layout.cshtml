<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3>VSM Trucking App</h3>
            </div>
            <ul class="list-unstyled components">
                <li>
                    <a href="#IndexSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-folder"></i>
                            Danh mục
                    </a>
                    <ul class="collapse list-unstyled" id="IndexSubmenu">
                        <li><a href="/Index/Consignee/">Khách hàng</a></li>
                        <li><a href="/Driver/Index">Tài xế</a></li>
                        <li><a href="/Truck/Index">Xe vận tải</a></li>
                        <li><a href="/Location/Index">Địa chỉ</a></li>
                        <li><a href="/Trailer/Index">Rơ mooc</a></li>
                        <li><a href="/FeeByConsignee/Index">Biểu cước</a></li>
                        <li><a href="/ShippingLines/Index">Hãng tàu</a></li>
                        <li><a href="/Area/Index">Khu vực</a></li>
                        <li><a href="/OrderType/Index">Loại hàng</a></li>
                        @if (HttpContext.Current.Request.IsAuthenticated)
                        {
                            if (Convert.ToInt32(HttpContext.Current.User.Identity.Name.Split('|')[2]) == 1)
                            {
                                <li><a href="/User/Index">Tài khoản</a></li>
                            }
                        }
                    </ul>
                </li>
                <li>
                    <a href="#TransactionSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-plus"></i>
                            Kế hoạch
                    </a>
                    <ul class="collapse list-unstyled" id="TransactionSubmenu">
                        @if (HttpContext.Current.Request.IsAuthenticated)
                        {
                            if (Convert.ToInt32(HttpContext.Current.User.Identity.Name.Split('|')[2]) == 1 || Convert.ToInt32(HttpContext.Current.User.Identity.Name.Split('|')[2]) == 5)
                            {
                                <li><a tabindex="-1" href="/Transaction/Index">Tạo Kế hoạch mới</a></li>
                            }
                        }
                        <li><a tabindex="-1" href="/Transaction/Manage">Quản lý Kế hoạch</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#CoordinateSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-truck"></i>
                            Điều vận
                    </a>
                    <ul class="collapse list-unstyled" id="CoordinateSubmenu">
                        @if (HttpContext.Current.Request.IsAuthenticated)
                        {
                            if (Convert.ToInt32(HttpContext.Current.User.Identity.Name.Split('|')[2]) == 1 || Convert.ToInt32(HttpContext.Current.User.Identity.Name.Split('|')[2]) == 4)
                            {
                                <li><a tabindex="-1" href="/Coordinate/CreateNew">Tạo chuyến mới</a></li>
                            }
                        }
                        
                        <li><a tabindex="-1" href="/Coordinate/Index">Quản lý Điều vận</a></li>
                        <li><a tabindex="-1" href="/Coordinate/TruckInfo">Thông tin xe</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#ReportSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="fas fa-file-alt"></i>
                            Báo cáo
                    </a>
                    <ul class="collapse list-unstyled" id="ReportSubmenu">
                        <li><a tabindex="-1" href="/Report/GetRevenue">Báo cáo Doanh thu</a></li>
                        <li><a tabindex="-1" href="/Report/Index">Báo cáo Tổng hợp</a></li>
                    </ul>
                </li>
            </ul>
        </nav>
        <div class="container body-content" id="content">
                <div class="container-fluid" style="margin-top:10px;">
                    <button type="button" id="sidebarCollapse" class="btn btn-default">
                        <i class="fas fa-align-justify"></i>
                    </button>
                    <a href="/Login/LogOut" style="float: right;"><i><u>Đăng xuất</u></i></a>
                </div>
                <!--<div class="container-fluid"  style="text-align:center">
                    <img src="~/Content/Image/logo.png" class="img-responsive" style="display:inline-block" />
                </div>  -->       
            <hr />
            <div class="jumbotron" style="padding:10px">
                @RenderBody()
            </div>
            
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Viconship Da Nang</p>
            </footer>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper.JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-1.12.4.min.js"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/solid.js" integrity="sha384-tzzSw1/Vo+0N5UhStP3bvwWPq+uvzCMfrN1fEFe+xBmv1C/AtVX5K0uZtmcHitFZ" crossorigin="anonymous"></script>
    <script defer src="https://use.fontawesome.com/releases/v5.0.13/js/fontawesome.js" integrity="sha384-6OIrr52G08NpOFSZdxxz1xdNSndlD4vdcf/q2myIUVO0VsqaGHJsB0RaBE01VTOY" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-1.12.4.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script src="~/Scripts/notify.min.js"></script>
    <script>
        $(document).ready(function(){
          $('#sidebarCollapse').on('click', function () {
              $('#sidebar').toggleClass('active');
          });
        });
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>