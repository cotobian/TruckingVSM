@model TruckingVSM.Models.ShippingLine
@{
    Layout = null;
}
@using (Html.BeginForm("AddOrEdit", "ShippingLines", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        <label class="control-label">Tên hãng tàu</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Tên viết tắt</label>
        @Html.EditorFor(model => model.ShortName, new { htmlAttributes = new { @class = "form-control", @id = "expedt" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}