@model TruckingVSM.Models.VT_GetConsigneeWithArea_Result
@{
    Layout = null;
}
@using (Html.BeginForm("AddOrEditConsignee", "Index", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.aid, new { @id = "aid" })
    @Html.HiddenFor(model => model.area, new { @id = "area" })
    <div class="form-group">
        <label class="control-label">Tên khách hàng</label>
        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Name)
    </div>
    <div class="form-group">
        <label class="control-label">Địa chỉ</label>
        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Tên viết tắt</label>
        @Html.EditorFor(model => model.ShortName, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Mã số thuế</label>
        @Html.EditorFor(model => model.TaxCode, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Giờ gửi Email điều chỉnh</label>
        @Html.EditorFor(model => model.UpdateEmailTime, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label class="control-label">Khu vực</label>
        <select class="form-control" id="arealist">
            <option value=""></option>
            @foreach (var area in ViewBag.data)
            {
                if (area.ID == Model.aid)
                {
                    <option selected value="@area.ID">@area.Name</option>
                }
                else
                {
                    <option value=@area.ID>@area.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
<script>
    $("#arealist").change(function () {
        console.log($("#arealist").val());
        var id = $("#arealist").val();
        var name = $("#arealist").html();
        $("#aid").val(id);
    });
</script>