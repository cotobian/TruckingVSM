@model TruckingVSM.Models.TruckInfo
@{
    Layout = null;
}
@using (Html.BeginForm("AddOrEditInfo", "Coordinate", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        <label type="text" class="control-label">Xe hoạt động tốt</label>
        @Html.EditorFor(model => model.XeTot, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Xe có kế hoạch vận chuyển</label>
        @Html.EditorFor(model => model.XeCoKeHoach, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Xe sửa chữa, bảo dường ICD</label>
        @Html.EditorFor(model => model.XeSuaChua, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Xe chưa có tài xế</label>
        @Html.EditorFor(model => model.XeChuaCoTai, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Xe lưu tại chủ hàng</label>
        @Html.EditorFor(model => model.XeLuuChuHang, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Xe thuê ngoài Huế</label>
        @Html.EditorFor(model => model.XeThueNgoaiHue, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Xe thuê ngoài Quảng Nam</label>
        @Html.EditorFor(model => model.XeThueNgoaiQN, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Xe thuê ngoài Đà Nẵng</label>
        @Html.EditorFor(model => model.XeThueNgoaiDN, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Chủ hàng thiếu xe Huế</label>
        @Html.EditorFor(model => model.ThieuXeHue, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Chủ hàng thiếu xe Quảng Nam</label>
        @Html.EditorFor(model => model.ThieuXeQN, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label type="text" class="control-label">Chủ hàng thiếu xe Đà Nẵng</label>
        @Html.EditorFor(model => model.ThieuXeDN, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <input type="reset" value="Reset" class="btn" />
    </div>
}
